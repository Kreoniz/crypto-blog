---
const { url, title, description, pubDate } = Astro.props;
---

<a class="article-link" href={url}>
  <div class="article-title">{title}</div>

  <div class="article-info">
    <p>{description}</p>
    <div class="article-date">{pubDate}</div>
  </div>
</a>

<style>
  .article-link {
    display: block;
    gap: 1.5rem;

    opacity: 0.6;

    transition: all 0.2s ease-in-out;
    border: 2px solid var(--secondary);
    border-radius: 8px;
    padding: 0.5rem 1rem;

    &:hover {
      opacity: 1;

      background-color: var(--secondary);
      text-decoration: none;
    }
  }

  .article-title {
    font-weight: 600;
  }

  .article-info {
    display: flex;
    justify-content: space-between;
    align-items: end;
    font-size: 0.875rem;
  }

  .article-date {
    text-wrap: nowrap;
  }
</style>
